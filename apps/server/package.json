{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "lint": "ultracite check",
    "fix": "ultracite fix",
    "fix:unsafe": "ultracite fix --unsafe",
    "test": "bun test --preload ./test/test.setup.ts",
    "test:watch": "bun test --watch --preload ./test/test.setup.ts"
  },
  "dependencies": {
    "@ai-stilist/ai": "workspace:*",
    "@ai-stilist/api": "workspace:*",
    "@ai-stilist/auth": "workspace:*",
    "@ai-stilist/db": "workspace:*",
    "@ai-stilist/logger": "workspace:*",
    "@ai-stilist/queue": "workspace:*",
    "@ai-stilist/redis": "workspace:*",
    "@ai-stilist/shared": "workspace:*",
    "@ai-stilist/storage": "workspace:*",
    "@ai-stilist/test-utils": "workspace:*",
    "@ai-stilist/wardrobe": "workspace:*",
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "hono": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/bun": "^1.3.2",
    "drizzle-zod": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  }
}
