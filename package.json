{
  "name": "ai-stilist",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.8.2",
      "@orpc/server": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "better-auth": "^1.3.28",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5",
      "@orpc/client": "^1.10.0",
      "typeid-js": "^1.0.1",
      "posthog-node": "^5.11.0",
      "drizzle-orm": "^0.44.2",
      "drizzle-zod": "^0.7.0",
      "ioredis": "^5.8.2"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "format": "turbo format",
    "lint": "turbo lint",
    "fix": "turbo fix",
    "fix:unsafe": "turbo fix:unsafe",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "ci:local": "turbo lint typecheck test build --concurrency=1",
    "ci:quick": "turbo lint typecheck --filter='[HEAD^1]'",
    "ci:full": "bun install && bun run ci:local",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @ai-stilist/db db:push",
    "db:studio": "turbo -F @ai-stilist/db db:studio",
    "db:generate": "turbo -F @ai-stilist/db db:generate",
    "db:migrate": "turbo -F @ai-stilist/db db:migrate",
    "db:start": "turbo -F @ai-stilist/db db:start",
    "db:watch": "turbo -F @ai-stilist/db db:watch",
    "db:stop": "turbo -F @ai-stilist/db db:stop",
    "db:down": "turbo -F @ai-stilist/db db:down"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/bun": "^1.3.2",
    "tsdown": "^0.16.4",
    "turbo": "^2.6.1",
    "ultracite": "6.2.0"
  },
  "packageManager": "bun@1.3.2"
}
